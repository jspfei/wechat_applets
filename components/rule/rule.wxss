/* components/rule/rule.wxss */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.center {
  position: fixed;
  display: flex;
  display: -webkit-flex;
  width: 100%;
  height: 100%; 
  z-index: 1001;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  opacity: 1;
  flex-flow: column;
  
}

.btn_close {
  width: 90rpx;
  height: 90rpx;
  margin-top: 50rpx;
}

.rule_area {
  width: 80%;
  height:50%;
  background: #fff;
  border: 5px solid #f3df91;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 10rpx 10rpx 20rpx rgba(0, 0, 0, 0.10), -10rpx 10rpx 20rpx rgba(0, 0, 0, 0.10);
  justify-content: flex-start; 
  display: flex;
  display: -webkit-flex; 
  flex-flow: column;
  align-content: center
}
.line_center,.line_start,.line_top {
  display: flex;
  display: -webkit-flex;
   flex-direction: row; 
   flex-wrap: nowrap;   
  
}
.line_center{
 justify-content: center;
   margin-top: 30rpx;
}
.line_start,.line_top  {
  justify-content: flex-start;
}
 
.text,.text1{ 
  word-break:break-all;  
  position: relative;
  height: 60rpx;
  color: #ab5a0b;
  font-size: 30rpx;  
  margin-left: 20rpx;
  margin-top:30rpx;
  margin-right: 10rpx;
}
.text1{
  margin-top: -5rpx;
}
 
.text_top{
  position: relative;
  height: 40rpx;
  color: #ab5a0b;
  font-size: 40rpx; 
  margin-top: 30rpx;
}
